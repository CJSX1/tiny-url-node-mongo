<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="icon" href="../weeurl.ico" />
    <!-- Bootstrap CSS -->
    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <!-- Compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link rel="stylesheet" href="//cdn.datatables.net/1.10.21/css/jquery.dataTables.min.css">

    <link type="text/css" href="../styles/style.css" rel="stylesheet">

    <title>Wee Url</title>
</head>

<body>
    <div class="valign-wrapper row login-box">

        <div class="col card hoverable">

            <div class="nav-wrapper center">
                <h2>WeeUrl</h2>
            </div>

            <div class="card-content">

                <form action="/shortUrls" method="post" class="col s12">
                    <div class="row">
                        <div class="input-field col s9">
                            <input type="url" name="fullUrl" id="fullUrl" class="validate">
                            <label for="fullUrl">Enter Your URL</label>
                        </div>
                        <div class="input-field col s3 center-align">
                            <input type="reset" id="reset" class="btn-flat grey-text waves-effect">
                            <button class="btn waves-effect waves-light" type="submit" name="action">Shrink!</button>
                        </div>
                    </div>
                </form>

                <div class="row">
                    <div id="admin" class="col s12">
                        <div class="card material-table">
                            <div class="table-header">
                                <span class="table-title">Short Urls Database</span>
                                <div class="actions">
                                    <a href="#" class="search-toggle waves-effect btn-flat nopadding"><i
                                            class="material-icons">search</i></a>
                                </div>
                            </div>

                            <table id="datatable">
                                <thead>
                                    <tr>
                                        <th style="width: 60%;">Full URL</th>
                                        <th>Short URL</th>
                                        <th>Clicks</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% shortUrls.forEach(shortUrl => { %>
                                    <tr>
                                        <td style="width: 60%;">
                                            <a href="<%= shortUrl.full %>">
                                                <%= shortUrl.full %>
                                            </a>
                                        </td>
                                        <td><a target="_blank" href="<%= shortUrl.short %>"><%= shortUrl.short %></a>
                                        </td>
                                        <td><%= shortUrl.clicks %></td>
                                    </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>


        </div>
    </div>
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"
        integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="https://cdn.datatables.net/1.10.7/js/jquery.dataTables.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.3.1/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.3.1/js/buttons.print.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.3.1/js/dataTables.buttons.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>

    <script src="../js/script.js"></script>
    <script>
        $("#reset").on("click", function () {
            $('label').removeClass('active');
        });

        $(document).ready(function () {
            console.log("i am ready to rock'n roll");
        });

    </script>
</body>

</html>